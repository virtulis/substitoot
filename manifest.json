{
	"description": "Intercepts Mastodon API requests and appends any missing replies directly from the source server.",
	"manifest_version": 2,
	"name": "Substitoot â€” a transparent toot fetcher",
	"short_name": "Substitoot",
	"author": "virtulis",
	"version": "0.2.0",
	"homepage_url": "https://github.com/virtulis/substitoot",
	"icons": {
		"48": "logo.svg"
	},
	"permissions": [
		"storage"
	],
	"optional_permissions": [
		"webRequest",
		"webRequestBlocking",
		"webRequestFilterResponse",
		"webNavigation",
		"https://*/*"
	],
	"options_ui": {
		"page": "static/options.html",
		"browser_style": true
	},
	"background": {
		"scripts": [
			"dist/background.js"
		]
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "substitoot@kludge.guru"
		}
	}
}
